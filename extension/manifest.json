{
  "manifest_version": 3,
  "name": "Notion Views Tracker",
  "version": "1.1.0",
  "description": "Track page views in Notion databases",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://www.notion.so/*",
    "https://*.notion.so/*",
    "https://notion.so/*",
    "https://web-production-ee075.up.railway.app/*",
    "https://*.up.railway.app/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://www.notion.so/*",
        "https://*.notion.so/*",
        "https://notion.so/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Notion Views Tracker"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["https://www.notion.so/*", "https://*.notion.so/*"]
    }
  ]
}